<!-- Page Header -->
<div class="page-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h2 mb-0"><i class="fas fa-users me-2"></i>User Management</h1>
                <p class="mb-0 opacity-75">Manage user accounts and balances</p>
            </div>
            <!-- <div class="col-auto">
                <a href="/users/add" class="btn add-user-btn">
                    <i class="fas fa-plus me-2"></i>Add New User
                </a>
            </div> -->
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- Users Table -->
    <div class="users-table">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th width="80">ID</th>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th width="200">Balance</th>
                    <th width="120" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> {
                    const balanceClass = user.balance < 2000000 ? 'balance-low' : user.balance < 5000000
                        ? 'balance-medium' : 'balance-high' ; %>
                        <tr>
                            <td>
                                <span class="badge-id">
                                    <%= user.id %>
                                </span>
                            </td>
                            <td>
                                <div class="user-username">@<%= user.username %>
                                </div>
                            </td>
                            <td>
                                <div class="user-fullname">
                                    <%= user.fullName %>
                                </div>
                            </td>
                            <td>
                                <div class="user-balance <%= balanceClass %>">
                                    <%= user.balance.toLocaleString() %> $
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="action-buttons justify-content-center">
                                    <a href="/users/deposit/<%= user.id %>" class="btn deposit-btn btn-sm"
                                        title="Deposit">
                                        <i class="fas fa-money-bill-wave"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Empty State -->
    <% if (users.length===0) { %>
        <div class="text-center py-5">
            <i class="fas fa-users fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">No Users Found</h3>
            <p class="text-muted">There are no users in the system yet.</p>
            <a href="/users/add" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New User
            </a>
        </div>
        <% } %>
</div>
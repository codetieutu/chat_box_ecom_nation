<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-money-bill-wave me-2"></i>Deposit Money
                </h1>
                <a href="/users" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
            </div>

            <!-- User Info Card -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">User Information</h5>
                    <div class="row">
                        <div class="col-6">
                            <strong>ID:</strong>
                            <%= user.id %>
                        </div>
                        <div class="col-6">
                            <strong>Username:</strong> @<%= user.username %>
                        </div>
                        <div class="col-12 mt-2">
                            <strong>Full Name:</strong>
                            <%= user.fullName %>
                        </div>
                        <div class="col-12 mt-2">
                            <strong>Current Balance:</strong>
                            <span class="user-balance balance-high">
                                <%= user.balance.toLocaleString() %> $
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Deposit Form -->
            <div class="card">
                <div class="card-body">
                    <form action="/users/deposit/<%= user.id %>" method="POST">
                        <div class="mb-3">
                            <label for="amount" class="form-label fw-bold">Deposit Amount ($)</label>
                            <input type="number" class="form-control form-control-lg" id="amount" name="amount" required
                                min="0" step="any" placeholder="Enter amount">
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check me-2"></i>Confirm Deposit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
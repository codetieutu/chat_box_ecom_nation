<!-- Page Header -->
<div class="page-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h2 mb-0"><i class="fas fa-shopping-cart me-2"></i>Order Management</h1>
                <p class="mb-0 opacity-75">Manage customer orders and deliveries</p>
            </div>
            <div class="col-auto">
                <a href="/orders/add" class="btn add-order-btn">
                    <i class="fas fa-plus me-2"></i>Add New Order
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- Statistics Cards -->
    <div class="stats-cards">
        <div class="stat-card">
            <div class="stat-number">
                <%= orders.length %>
            </div>
            <div class="stat-label">Total Orders</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">
                <%= orders.filter(order=> order.status === 'pending').length %>
            </div>
            <div class="stat-label">Pending Orders</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">
                <%= orders.filter(order=> order.status === 'success').length %>
            </div>
            <div class="stat-label">Delivered Orders</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">
                <%= orders.filter(order=> order.status === 'cancelled').length %>
            </div>
            <div class="stat-label">Cancelled Orders</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">
                <%= orders.reduce((total, order)=> total + order.total_amount, 0).toLocaleString() %> $
            </div>
            <div class="stat-label">Total Revenue</div>
        </div>
    </div>

    <!-- Filter Buttons -->
    <div class="filter-buttons">
        <button class="filter-btn active" onclick="filterOrders('all')">
            All Orders (<%= orders.length %>)
        </button>
        <button class="filter-btn" onclick="filterOrders('pending')">
            Pending (<%= orders.filter(order=> order.status === 'pending').length %>)
        </button>
        <button class="filter-btn" onclick="filterOrders('success')">
            Delivered (<%= orders.filter(order=> order.status === 'success').length %>)
        </button>
        <button class="filter-btn" onclick="filterOrders('cancelled')">
            Cancelled (<%= orders.filter(order=> order.status === 'cancelled').length %>)
        </button>
    </div>

    <!-- Orders Table -->
    <div class="orders-table">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th width="80">ID</th>
                    <th>Buyer</th>
                    <th>Product Name</th>
                    <th width="100" class="text-center">Quantity</th>
                    <th width="150" class="text-end">Total Money</th>
                    <th width="120" class="text-center">Status</th>
                    <th width="180" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody id="ordersTableBody">
                <% orders.forEach(order=> { %>
                    <tr class="order-row" data-status="<%= order.status %>">
                        <td>
                            <span class="order-id">#<%= order.id %></span>
                        </td>
                        <td>
                            <div class="buyer-name">
                                <%= order.receiver_name %>
                            </div>
                            <small class="text-muted">
                                <%= order.order_date %>
                            </small>
                        </td>
                        <td>
                            <div class="product-name">
                                <%= order.product_name %>
                            </div>
                            <% if (order.note) { %>
                                <div class="mt-1">
                                    <button type="button" class="btn btn-sm btn-outline-info view-note-btn"
                                        data-note="<%= order.note %>" onclick="viewNote(this)">
                                        <i class="fas fa-sticky-note me-1"></i>View Note
                                    </button>
                                </div>
                                <% } %>
                        </td>
                        <td class="text-center">
                            <span class="quantity-badge">
                                <%= order.quantity %>
                            </span>
                        </td>
                        <td class="text-end">
                            <div class="total-money">
                                <%= order.total_amount.toLocaleString() %> $
                            </div>
                        </td>
                        <td class="text-center">
                            <span class="status-badge status-<%= order.status %>">
                                <%= order.status==='pending' ? 'Pending' : order.status==='success' ? 'Delivered'
                                    : 'Cancelled' %>
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="action-buttons">
                                <% if (order.status==='pending' ) { %>
                                    <button type="button" class="deliver-btn btn-sm"
                                        onclick="showDeliveryForm(<%= order.id %>)">
                                        <i class="fas fa-truck me-1"></i>Deliver
                                    </button>
                                    <form action="/orders/cancel/<%= order.id %>" method="POST" class="d-inline">
                                        <button type="submit" class="cancel-btn btn-sm"
                                            onclick="return confirm('Are you sure you want to cancel order #<%= order.id %>?')">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </button>
                                    </form>
                                    <% } else if (order.status==='success' ) { %>
                                        <span class="deliver-btn disabled btn-sm">
                                            <i class="fas fa-check me-1"></i>Delivered
                                        </span>
                                        <% if (order.delivery_note) { %>
                                            <button type="button" class="btn btn-sm btn-outline-success view-note-btn"
                                                data-note="<%= order.delivery_note %>" onclick="viewNote(this)">
                                                <i class="fas fa-truck me-1"></i>Delivery Note
                                            </button>
                                            <% } %>
                                                <% } else { %>
                                                    <span class="cancel-btn disabled btn-sm">
                                                        <i class="fas fa-ban me-1"></i>Cancelled
                                                    </span>
                                                    <% } %>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Empty State -->
    <% if (orders.length===0) { %>
        <div class="empty-state">
            <i class="fas fa-shopping-cart"></i>
            <h3>No Orders Found</h3>
            <p class="text-muted">There are no orders in the system yet.</p>
            <a href="/orders/add" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Create First Order
            </a>
        </div>
        <% } %>
</div>

<!-- Delivery Modal -->
<div class="modal fade" id="deliveryModal" tabindex="-1" aria-labelledby="deliveryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deliveryModalLabel">Deliver Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deliveryForm" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="deliveryNote" class="form-label">Delivery Note</label>
                        <textarea class="form-control" id="deliveryNote" name="delivery_note" rows="6"
                            placeholder="Enter delivery information, account details, or any notes for this order..."></textarea>
                        <div class="form-text">
                            Provide delivery details, account information, or any relevant notes for this order.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Confirm Delivery</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Note View Modal -->
<div class="modal fade" id="noteModal" tabindex="-1" aria-labelledby="noteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="noteModalLabel">Order Note</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="noteContent" style="white-space: pre-wrap; font-family: inherit;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function filterOrders(status) {
        const rows = document.querySelectorAll('.order-row');
        const filterBtns = document.querySelectorAll('.filter-btn');

        // Update active filter button
        filterBtns.forEach(btn => btn.classList.remove('active'));
        event.target.classList.add('active');

        // Filter rows
        rows.forEach(row => {
            if (status === 'all' || row.getAttribute('data-status') === status) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    function showDeliveryForm(orderId) {
        // Set form action
        document.getElementById('deliveryForm').action = `/orders/deliver/${orderId}`;

        // Show modal
        const modal = new bootstrap.Modal(document.getElementById('deliveryModal'));
        modal.show();

        // Focus on textarea
        setTimeout(() => {
            document.getElementById('deliveryNote').focus();
        }, 500);
    }

    function viewNote(button) {
        const note = button.getAttribute('data-note');
        document.getElementById('noteContent').textContent = note;

        const modal = new bootstrap.Modal(document.getElementById('noteModal'));
        modal.show();
    }

    // Add confirmation for cancel action
    document.addEventListener('DOMContentLoaded', function () {
        const cancelForms = document.querySelectorAll('form[action*="cancel"]');
        cancelForms.forEach(form => {
            form.addEventListener('submit', function (e) {
                const orderId = this.action.split('/').pop();
                if (!confirm(`Are you sure you want to cancel order #${orderId}?`)) {
                    e.preventDefault();
                }
            });
        });

        // Add confirmation for delivery form
        document.getElementById('deliveryForm').addEventListener('submit', function (e) {
            const orderId = this.action.split('/').pop();
            const note = document.getElementById('deliveryNote').value.trim();

            if (!confirm(`Are you sure you want to mark order #${orderId} as delivered?`)) {
                e.preventDefault();
                return false;
            }

            if (note === '') {
                if (!confirm('You haven\'t entered any delivery note. Continue without note?')) {
                    e.preventDefault();
                    return false;
                }
            }
        });
    });
</script>